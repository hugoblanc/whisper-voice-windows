<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>..\..\icons\app.ico</ApplicationIcon>
    <Version>2.3.0</Version>
    <AssemblyName>WhisperVoice</AssemblyName>
    <RootNamespace>WhisperVoice</RootNamespace>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    <DebugType>embedded</DebugType>
    <PublishTrimmed>false</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NAudio" Version="2.2.1" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\..\icons\mic_idle.ico" LogicalName="mic_idle.ico" />
    <EmbeddedResource Include="..\..\icons\mic_recording.ico" LogicalName="mic_recording.ico" />
    <EmbeddedResource Include="..\..\icons\mic_transcribing.ico" LogicalName="mic_transcribing.ico" />
  </ItemGroup>

</Project>
